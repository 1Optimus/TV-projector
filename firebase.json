{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {        
        "source": "**/*.@(jpg|png|jpeg)",
        "headers": [
          {       
            "key": "Cache-Control",
            "value": "public, max-age=86400, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
